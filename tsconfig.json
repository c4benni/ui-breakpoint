{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["es6", "esnext", "es2016", "dom", "dom.iterable", "scripthost"],
    "allowJs": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "",
    "importHelpers": true,
    "noImplicitAny": true,
    "baseUrl": "."
  },
  "include": ["./index.ts"],
  "exclude": ["node_modules", "dist"]
}
